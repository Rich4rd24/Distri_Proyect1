@model FrontendApp.Models.RegisterViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center mb-0">Registro de Usuario</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post" id="registerForm">
                        @* Fila para Nombre y Apellido *@
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Nombre</label>
                                    <input asp-for="Nombre" class="form-control" required placeholder="Ingrese su nombre" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Apellido</label>
                                    <input asp-for="Apellido" class="form-control" required placeholder="Ingrese su apellido" />
                                </div>
                            </div>
                        </div>

                        @* Fila para Género y Estado Civil *@
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Género</label>
                                    <select asp-for="Genero" class="form-select" required>
                                        <option value="">Seleccione su género...</option>
                                        <option value="Masculino">Masculino</option>
                                        <option value="Femenino">Femenino</option>
                                        <option value="Otro">Otro</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Estado Civil</label>
                                    <select asp-for="EstadoCivil" class="form-select">
                                        <option value="Soltero">Soltero</option>
                                        <option value="Casado">Casado</option>
                                        <option value="Divorciado">Divorciado</option>
                                        <option value="Viudo">Viudo</option>
                                        <option value="Otro">Otro</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        @* Fila para Lugar de Nacimiento y Nacionalidad *@
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Lugar de Nacimiento</label>
                                    <input asp-for="LugarNacimiento" class="form-control" placeholder="Ingrese su lugar de nacimiento" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Nacionalidad</label>
                                    <input asp-for="Nacionalidad" class="form-control" placeholder="Ingrese su nacionalidad" />
                                </div>
                            </div>
                        </div>

                        @* Fila para Ocupación y Teléfono *@
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Ocupación</label>
                                    <input asp-for="Ocupacion" class="form-control" placeholder="Ingrese su ocupación" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Teléfono</label>
                                    <input asp-for="Telefono" class="form-control" placeholder="Ingrese su teléfono" />
                                </div>
                            </div>
                        </div>

                        @* Fila para Email *@
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label">Email</label>
                                    <input asp-for="Email" type="email" class="form-control" required placeholder="ejemplo@correo.com" />
                                </div>
                            </div>
                        </div>

                        @* Fila para Contraseña *@
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label">Contraseña</label>
                                    <input asp-for="Contrasena" type="password" class="form-control" required placeholder="Ingrese su contraseña" />
                                </div>
                            </div>
                        </div>

                        @* Botones *@
                        <div class="row">
                            <div class="col-12 text-center">
                                <button type="button" class="btn btn-primary px-5" data-bs-toggle="modal" data-bs-target="#confirmationModal">
                                    <i class="fas fa-user-plus me-2"></i>Registrarse
                                </button>
                                <a asp-action="Login" class="btn btn-secondary px-5 ms-2">
                                    <i class="fas fa-arrow-left me-2"></i>Volver
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmación -->
<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="confirmationModalLabel">¡Registro Exitoso!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <i class="fas fa-check-circle text-success" style="font-size: 48px;"></i>
                <p class="mt-3">Se ha enviado el código de verificación a su cuenta, revíselo por favor.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-primary" id="modalConfirmButton">
                    <i class="fas fa-sign-in-alt me-2"></i>Ok
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Funcionalidad para el modal
        $(document).ready(function () {
            $("#modalConfirmButton").click(function () {
                // Enviar el formulario al dar clic en el botón del modal
                $("#registerForm").submit();
            });
        });
    </script>
}
